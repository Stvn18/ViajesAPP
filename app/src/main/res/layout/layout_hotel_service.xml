<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/border_ui">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hotel_service_name"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Nombre hotel"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/hotel_service_price"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="$228.00"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/hotel_service_numero_habitaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habitaciones 1"/>

    <TextView
        android:id="@+id/hotel_service_numero_adultos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adultos 1"/>

    <TextView
        android:id="@+id/hotel_service_numero_childs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NiÃ±os 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hotel_service_descripcion"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="11 horas 56 minutos"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/vuelo_detalle_seleccionar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>