        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resumen_vuelo_continuar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_gravity="end"
