<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/layout_listado_facturas_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#1234567"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/layout_listado_facturas_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02/06/2017 12:30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/layout_listado_facturas_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 100.00"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>